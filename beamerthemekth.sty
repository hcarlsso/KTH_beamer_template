\mode<presentation>

% Requirement
\RequirePackage{tikz}
\RequirePackage[absolute,overlay]{textpos} % Used until I can find a better way to place
                         % footnotes
\RequirePackage{etoolbox}

\setbeamersize{text margin left=.1778\paperwidth,text margin right=0.07\paperwidth}

\newlength\titlepagelogosize
\setlength\titlepagelogosize{0.165\paperwidth}

\newlength\titlepagebannerheight
\setlength\titlepagebannerheight{0.47314814814814815\paperheight}

\newlength\titlepagetitleskip
\setlength\titlepagetitleskip{\beamer@leftmargin-\titlepagelogosize}

\newlength\titlepagelogodepth
\setlength\titlepagelogodepth{\paperheight-\titlepagelogosize-\titlepagebannerheight}

\newlength\logosize
\setlength\logosize{0.145\paperwidth}

\newlength\bannerheight
\setlength\bannerheight{0.13240740740740742\paperheight}

\newlength\titleskip
\setlength\titleskip{\beamer@leftmargin-\logosize}

\newlength\plotheight
\setlength\plotheight{\dimexpr\paperheight-\logosize-\bannerheight}

% Settings
\usecolortheme{kth}
\useinnertheme{kth}
\useoutertheme{kth}

\setbeamertemplate{navigation symbols}{}
\setbeamertemplate{blocks}[rounded][shadow=true]

\setbeamerfont*{kthheader}{size=\tiny}
\setbeamerfont*{kthgraph}{size=\tiny}
\setbeamerfont{title}{size=\large}

\newcommand{\email}{\@dblarg\beamer@email}
\long\def\beamer@email[#1]#2{%
  \def\insertemail{#2}%
}
\newcommand{\footnoteone}{\@dblarg\beamer@footnoteone}
\long\def\beamer@footnoteone[#1]#2{%
  \def\insertfootnoteone{#2}%
}
\newcommand{\footnotetwo}{\@dblarg\beamer@footnotetwo}
\long\def\beamer@footnotetwo[#1]#2{%
  \def\insertfootnotetwo{#2}%
}
\newcommand{\footnotethree}{\@dblarg\beamer@footnotethree}
\long\def\beamer@footnotethree[#1]#2{%
  \def\insertfootnotethree{#2}%
}

\mode<all>
