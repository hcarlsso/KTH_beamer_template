\mode<presentation>

% Frame title
\defbeamertemplate*{frametitle}{kth}[1][]
{%
  \leavevmode%
  \hbox{%
  \begin{beamercolorbox}[wd=.15\paperwidth, sep=.025\paperwidth, ht=.15\paperwidth, #1]{logo in head}%
    \includegraphics[width=.1\paperwidth,keepaspectratio]{KTH_Logotyp_RGB_2013.pdf}%
  \end{beamercolorbox}%
  \begin{beamercolorbox}[wd=.6\paperwidth, ht=.15\paperwidth, center, #1]{frametitle}% 
    \ifx\insertframesubtitle\@empty%
      \strut\Large\insertframetitle%
    \else%
      \strut\Large\insertframetitle\par%
      \strut\large\insertframesubtitle%
    \fi%
    \vfill%
  \end{beamercolorbox}%
  \begin{beamercolorbox}[wd=.25\paperwidth, ht=.15\paperwidth, center, sep=.025\paperwidth, #1]{header in head}%
    \insertkthheader%
  \end{beamercolorbox}}%
}

% Footline
\defbeamertemplate*{footline}{kth}[1][]%
{%
  \begin{beamercolorbox}[wd=\paperwidth, leftskip=0pt, ht=128pt, #1]{footer}%
    \ifnum\thepage>1%
    \begin{tikzpicture}%
      \begin{scope}[x=1pt,y=1pt,draw=kthblue]%
        \draw [fill=kthblue] (0,20) {[rounded corners=3pt] -- (50,20) -- (50,35)} -- (\the\paperwidth,35) -- (\the\paperwidth,0) -- (0,0) -- cycle;
      \end{scope}%
    \end{tikzpicture}%
    \fi
  \end{beamercolorbox}%
  \begin{beamercolorbox}[wd=\paperwidth, ht=0pt, sep=1ex, #1]{info in foot}%
    \ifnum\thepage>1%
    \hfill \insertauthor{} --
    \inserttitle\ \insertsubtitle\ \insertpagenumber%
    \fi%
  \end{beamercolorbox}%
}
	
\mode<all>
