\mode<presentation>

% Frame title
\defbeamertemplate*{frametitle}{kth}[1][]
{
\vskip3.18pt%
  \begin{beamercolorbox}[wd=\paperwidth,ht=1.2cm]{frametitle} 
  \begin{tikzpicture}
  \useasboundingbox (0,0) rectangle (\the\paperwidth,30pt);
  \fill[blue!50!cyan!80] (50pt,0) rectangle (\the\paperwidth,30pt);
   \ifx\insertframesubtitle\@empty%
      {\node[anchor=west, white,font=\large] at (60pt,15pt){\insertframetitle};}
   \else%
      {\node[anchor= west, white,font=\large] at (60pt,20pt){\insertframetitle};%
       \node[anchor= west, white,font=\small] at (60pt,8pt){\insertframesubtitle};}%
   \fi
  \end{tikzpicture}
  \end{beamercolorbox}
}

% Footline
\defbeamertemplate*{footline}{kth}[1][]
{
	\ifnum\thepage=1
	\vskip0pt
	\fi
	\ifnum\thepage>1\relax%
		\raisebox{4pt}[0pt][0pt]{\begin{beamercolorbox}[wd=\paperwidth,ht=31pt,rightskip=7pt]{footline}
			\hfill \inserttitle \hspace{1pt} - \insertsubtitle
		\end{beamercolorbox}}%
	\fi
}
	
