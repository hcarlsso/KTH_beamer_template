\mode<presentation>

% Frame title
\defbeamertemplate*{frametitle}{kth}[1][]
{%
  \leavevmode%
  \hbox{%
  \hskip-\beamer@leftmargin%
  \begin{beamercolorbox}[wd=\logosize, sep=.25\logosize, ht=\logosize, #1]{logo in head}%
    \includegraphics[width=.5\logosize,
      keepaspectratio]{KTH_Logotyp_RGB_2013.pdf}%
  \end{beamercolorbox}%
  \hskip\titleskip%
  \begin{beamercolorbox}[wd=\dimexpr\paperwidth-\logosize-\beamer@rightmargin-\titleskip,
      ht=\logosize, #1]{frametitle}% 
    \ifx\insertframesubtitle\@empty%
      \strut\Large\insertframetitle\strut%
    \else%
      \strut\Large\insertframetitle\par%
      \strut\large\insertframesubtitle%
    \fi%
    \vskip.02\paperwidth%
  \end{beamercolorbox}%
  %\begin{beamercolorbox}[wd=.20\paperwidth, ht=.15\paperwidth, center, sep=.025\paperwidth, #1]{header in head}%
  %  \begin{flushleft}\insertkthheader\end{flushleft}}%
  %  \vskip.04\paperwidth%
  %\end{beamercolorbox}
}%
}

% Footline
\defbeamertemplate*{footline}{kth}[1][]%
{%
  \begin{beamercolorbox}[wd=\paperwidth, leftskip=0pt, ht=\bannerheight, #1]{footer}%
    \ifnum\thepage>1%
    \begin{tikzpicture}%
      \begin{scope}[x=1pt,y=1pt,draw=kthblue]% Can be simplified a little bit
                                % with Qrrbrbirlbel's tikzlibrarypaths.ortho.tex:
        \draw [fill=kthblue] (0,20) [rounded corners=3pt] -| (50,35) [rounded
          corners=0pt] -| (\the\paperwidth,0) -| (0,20);
      \end{scope}%
    \end{tikzpicture}%
    \fi%
  \end{beamercolorbox}%
  \begin{beamercolorbox}[wd=\paperwidth, ht=0pt, sep=1ex, #1]{info in foot}%
    \ifnum\thepage>1%
      \hfill %
      \insertpagenumber%
    \fi%
  \end{beamercolorbox}%
}

