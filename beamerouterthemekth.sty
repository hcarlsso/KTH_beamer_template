        \draw [fill=kthblue] (0,23) [rounded corners=3pt] -| (50,35) [rounded
          corners=0pt] -| (\the\paperwidth,0) -| (0,20);
      \end{scope}%
    \end{tikzpicture}%
  \end{beamercolorbox}%
  \begin{beamercolorbox}[wd=\paperwidth, ht=0pt, sep=1ex, #1]{info in foot}%
      \hfill %
      \insertframenumber%
  \end{beamercolorbox}%
}

